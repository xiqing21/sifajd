.notice-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.notice-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(156, 11, 11, 0.06);
  border: 2rpx solid rgba(156, 11, 11, 0.08);
}

.notice-item__meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 18rpx;
}

.notice-item__tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(199, 30, 30, 0.12);
  color: #9c0b0b;
  letter-spacing: 4rpx;
}

.notice-item__date {
  font-size: 22rpx;
  color: #999999;
}

.notice-item__title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.notice-item__desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.notice-item__more {
  margin-top: 18rpx;
  font-size: 24rpx;
  color: #9c0b0b;
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
}
