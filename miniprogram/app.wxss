/** app.wxss **/
page {
  --color-primary: #9C0B0B;
  --color-primary-light: #C71E1E;
  --color-secondary: #601010;
  --color-background: #F6F6F6;
  --color-surface: #FFFFFF;
  --color-text: #1A1A1A;
  --color-text-light: #666666;
  --color-border: #F0E1E1;
  --color-accent: #F8D7D7;
  --shadow-base: 0 18rpx 45rpx rgba(156, 11, 11, 0.12);

  background-color: var(--color-background);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei UI', 'Microsoft YaHei',
    Arial, sans-serif;
  font-size: 14px;
  color: var(--color-text);
  box-sizing: border-box;
}

.page-section {
  padding: 40rpx 32rpx 120rpx;
  box-sizing: border-box;
}

.card {
  background: var(--color-surface);
  border-radius: 28rpx;
  padding: 38rpx 40rpx;
  margin-bottom: 36rpx;
  box-shadow: var(--shadow-base);
}

.card:last-child {
  margin-bottom: 0;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--color-secondary);
}

.section-subtitle {
  font-size: 26rpx;
  color: var(--color-text-light);
}

.tag-row {
  display: flex;
  flex-wrap: wrap;
  gap: 18rpx;
}

.tag {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background: rgba(156, 11, 11, 0.12);
  font-size: 24rpx;
  color: var(--color-primary);
}

.button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 18rpx 32rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  border: none;
  line-height: 1;
}

.button-primary {
  background: linear-gradient(135deg, var(--color-primary), var(--color-primary-light));
  color: #ffffff;
}

.button-outline {
  background: transparent;
  color: var(--color-primary);
  border: 2rpx solid rgba(156, 11, 11, 0.35);
}

.button:active {
  transform: scale(0.96);
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280rpx, 1fr));
  gap: 28rpx;
}

.info-item {
  padding: 26rpx;
  border-radius: 22rpx;
  background: rgba(199, 30, 30, 0.08);
}

.info-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-primary);
  margin-bottom: 10rpx;
}

.info-desc {
  font-size: 24rpx;
  color: var(--color-text-light);
  line-height: 1.6;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.list-item {
  display: flex;
  gap: 20rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid rgba(199, 30, 30, 0.12);
}

.list-item:last-child {
  border-bottom: none;
}

.list-index {
  width: 64rpx;
  height: 64rpx;
  border-radius: 18rpx;
  background: linear-gradient(135deg, var(--color-primary), var(--color-primary-light));
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
}

.list-content {
  flex: 1;
}

.list-title {
  font-size: 30rpx;
  color: var(--color-secondary);
  font-weight: 600;
  margin-bottom: 12rpx;
}

.list-text {
  font-size: 26rpx;
  color: var(--color-text-light);
  line-height: 1.7;
}

.chip-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.chip {
  padding: 18rpx 32rpx;
  border-radius: 999rpx;
  background: rgba(199, 30, 30, 0.08);
  color: var(--color-primary);
  font-size: 26rpx;
}

.contact-row {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.contact-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-secondary);
}

.contact-value {
  font-size: 26rpx;
  color: var(--color-text-light);
  line-height: 1.6;
}

.action-chip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 28rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.action-primary {
  background: linear-gradient(135deg, var(--color-primary), var(--color-primary-light));
  color: #ffffff;
}

.action-secondary {
  background: rgba(156, 11, 11, 0.1);
  color: var(--color-primary);
}

.faq-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 22rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(156, 11, 11, 0.12);
}

.faq-question {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-secondary);
  margin-bottom: 12rpx;
}

.faq-answer {
  font-size: 26rpx;
  color: var(--color-text-light);
  line-height: 1.7;
}

.divider {
  height: 2rpx;
  background: rgba(199, 30, 30, 0.12);
  margin: 30rpx 0;
}

.footer {
  text-align: center;
  margin-top: 40rpx;
  color: var(--color-text-light);
  font-size: 24rpx;
}