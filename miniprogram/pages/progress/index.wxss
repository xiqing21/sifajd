.form-group {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-label {
  font-size: 26rpx;
  color: var(--color-secondary);
  font-weight: 600;
}

.form-input {
  padding: 20rpx 24rpx;
  border-radius: 18rpx;
  background: rgba(15, 76, 129, 0.08);
  font-size: 26rpx;
}

.submit-bar {
  margin-top: 12rpx;
  display: flex;
  justify-content: flex-start;
}

.tips {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: var(--color-text-light);
}

.error {
  margin: 20rpx 0;
  padding: 24rpx;
  border-radius: 20rpx;
  background: rgba(205, 55, 64, 0.12);
  color: #cd3740;
  font-size: 26rpx;
}

.meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 24rpx;
  font-size: 24rpx;
  color: var(--color-text-light);
}

.meta-item {
  line-height: 1.6;
}

.timeline {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  position: relative;
  padding-left: 32rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 10rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: rgba(15, 76, 129, 0.25);
}

.timeline-item {
  display: flex;
  gap: 18rpx;
  align-items: flex-start;
}

.timeline-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  background: rgba(15, 76, 129, 0.4);
  box-shadow: 0 0 0 4rpx rgba(15, 76, 129, 0.15);
}

.timeline-dot--done {
  background: var(--color-primary);
  box-shadow: 0 0 0 4rpx rgba(15, 76, 129, 0.25);
}

.timeline-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.timeline-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-secondary);
}

.timeline-desc {
  font-size: 24rpx;
  color: var(--color-text-light);
}

.timeline-time {
  font-size: 22rpx;
  color: rgba(15, 76, 129, 0.65);
}

.empty {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  color: var(--color-text-light);
}

.empty-image {
  width: 360rpx;
  height: 220rpx;
  border-radius: 26rpx;
  object-fit: cover;
  box-shadow: 0 16rpx 32rpx rgba(15, 76, 129, 0.18);
}

.empty-text {
  font-size: 26rpx;
}
