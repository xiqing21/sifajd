.assistant-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: var(--color-background);
}

.chat-area {
  flex: 1;
  padding: 30rpx;
  box-sizing: border-box;
}

.chat-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 28rpx;
}

.chat-item.assistant {
  flex-direction: row;
}

.chat-item.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: var(--color-primary);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.avatar-user {
  background: rgba(15, 76, 129, 0.2);
  color: var(--color-primary);
  margin-left: 20rpx;
  margin-right: 0;
}

.chat-bubble {
  max-width: 70%;
  padding: 22rpx 26rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  line-height: 1.6;
  box-shadow: 0 8rpx 24rpx rgba(15, 76, 129, 0.1);
  background: rgba(255, 255, 255, 0.95);
  color: var(--color-text);
}

.chat-item.user .chat-bubble {
  background: linear-gradient(135deg, var(--color-primary), var(--color-primary-light));
  color: #ffffff;
}

.shortcut-panel {
  padding: 0 30rpx 20rpx;
}

.shortcut-scroll {
  white-space: nowrap;
  margin-bottom: 16rpx;
}

.shortcut-chip {
  display: inline-flex;
  align-items: center;
  padding: 16rpx 26rpx;
  border-radius: 999rpx;
  background: rgba(15, 76, 129, 0.12);
  color: var(--color-primary);
  margin-right: 20rpx;
  font-size: 24rpx;
}

.shortcut-actions {
  display: flex;
  gap: 20rpx;
}

.quick-link {
  flex: 1;
  border-radius: 18rpx;
  padding: 24rpx;
  background: rgba(15, 76, 129, 0.08);
  text-align: center;
  color: var(--color-primary);
  font-size: 26rpx;
  font-weight: 600;
}

.input-panel {
  display: flex;
  gap: 16rpx;
  padding: 20rpx 30rpx 40rpx;
  background: #ffffff;
  border-top: 1rpx solid rgba(15, 76, 129, 0.08);
}

.chat-input {
  flex: 1;
  min-height: 80rpx;
  max-height: 180rpx;
  padding: 18rpx 24rpx;
  border-radius: 20rpx;
  background: rgba(15, 76, 129, 0.06);
  font-size: 26rpx;
}

.send-button {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 32rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, var(--color-primary), var(--color-primary-light));
  color: #ffffff;
  font-size: 28rpx;
}
