.contact-block {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.contact-block:last-child {
  margin-bottom: 0;
}

.form-group {
  margin-bottom: 28rpx;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.form-label {
  font-size: 26rpx;
  color: var(--color-secondary);
  font-weight: 600;
}

.form-input,
.form-textarea {
  padding: 20rpx 24rpx;
  border-radius: 18rpx;
  background: rgba(15, 76, 129, 0.06);
  font-size: 26rpx;
  color: var(--color-text);
}

.form-textarea {
  min-height: 160rpx;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-radius: 18rpx;
  background: rgba(15, 76, 129, 0.06);
}

.picker-value {
  font-size: 26rpx;
  color: var(--color-text-light);
}

.submit-bar {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  width: 100%;
}

.submit-bar--double {
  gap: 20rpx;
  justify-content: space-between;
}

.submit-bar--double .button {
  flex: 1;
  text-align: center;
}

.map-wrapper {
  margin-top: 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
  height: 260rpx;
  box-shadow: 0 12rpx 28rpx rgba(15, 76, 129, 0.12);
}

.contact-map {
  width: 100%;
  height: 100%;
}
