.assessment-scroll {
  height: 100vh;
  background: linear-gradient(180deg, rgba(156, 11, 11, 0.08) 0%, rgba(246, 246, 246, 1) 60%);
}

.assessment-banner {
  padding: 88rpx 40rpx 48rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  text-align: center;
}

.banner-title {
  font-size: 42rpx;
  font-weight: 700;
  color: var(--color-primary);
  letter-spacing: 6rpx;
}

.banner-desc {
  font-size: 26rpx;
  color: rgba(156, 11, 11, 0.7);
}

.assessment-body {
  padding: 0 32rpx 200rpx;
  display: flex;
  flex-direction: column;
  gap: 36rpx;
  box-sizing: border-box;
}

.action-grid {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.action-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 36rpx;
  border-radius: 32rpx;
  background: #ffffff;
  box-shadow: 0 22rpx 60rpx rgba(156, 11, 11, 0.12);
  color: var(--color-primary);
}

.action-card--highlight {
  background: linear-gradient(135deg, #9c0b0b, #c71e1e);
  color: #ffffff;
  box-shadow: 0 26rpx 68rpx rgba(156, 11, 11, 0.32);
}

.action-card__content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.action-card__title {
  font-size: 36rpx;
  font-weight: 700;
}

.action-card__desc {
  font-size: 26rpx;
  opacity: 0.8;
}

.action-card__icon {
  font-size: 44rpx;
  font-weight: 600;
  opacity: 0.9;
}

.scope-preview {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 36rpx;
  box-shadow: 0 18rpx 50rpx rgba(120, 32, 32, 0.12);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.scope-preview__label {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.scope-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 18rpx;
}

.scope-tag {
  padding: 16rpx 28rpx;
  border-radius: 999rpx;
  background: rgba(156, 11, 11, 0.1);
  color: var(--color-primary);
  font-size: 24rpx;
}

.scope-preview__hint {
  font-size: 24rpx;
  color: rgba(156, 11, 11, 0.6);
}

.scroll-space {
  height: 160rpx;
}
