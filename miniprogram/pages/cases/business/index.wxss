.business-scroll {
  height: 100vh;
  background: #f6f6f6;
}

.business-header {
  padding: 72rpx 32rpx 20rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.business-back {
  padding: 16rpx 28rpx;
  border-radius: 999rpx;
  background: rgba(156, 11, 11, 0.08);
  color: var(--color-primary);
  font-size: 26rpx;
}

.business-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--color-primary);
}

.business-body {
  padding: 0 32rpx 200rpx;
  box-sizing: border-box;
}

.business-card {
  display: flex;
  gap: 24rpx;
  background: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 22rpx 60rpx rgba(156, 11, 11, 0.12);
  padding: 36rpx;
}

.menu-panel {
  width: 240rpx;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.menu-item {
  background: rgba(156, 11, 11, 0.05);
  border-radius: 20rpx;
  padding: 24rpx 18rpx;
  font-size: 26rpx;
  color: var(--color-text);
  text-align: center;
}

.menu-item--active {
  background: #ffffff;
  border: 2rpx solid rgba(156, 11, 11, 0.3);
  color: var(--color-primary);
  box-shadow: 0 18rpx 40rpx rgba(156, 11, 11, 0.15);
}

.detail-panel {
  flex: 1;
  border-radius: 24rpx;
  background: rgba(156, 11, 11, 0.04);
  padding: 28rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.detail-head {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.detail-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detail-item {
  display: flex;
  gap: 20rpx;
  align-items: baseline;
}

.detail-code {
  width: 120rpx;
  font-size: 24rpx;
  color: var(--color-secondary);
}

.detail-name {
  flex: 1;
  font-size: 26rpx;
  color: var(--color-text);
  line-height: 1.6;
}
