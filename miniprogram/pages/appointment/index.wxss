.appointment-scroll {
  height: 100vh;
  background: #f6f6f6;
}

.appointment-body {
  padding: 0 32rpx 200rpx;
  display: flex;
  flex-direction: column;
  gap: 36rpx;
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border-radius: 28rpx;
  padding: 40rpx 36rpx;
  box-shadow: 0 18rpx 48rpx rgba(156, 11, 11, 0.08);
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.form-row {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.form-input,
.form-picker__value,
.form-textarea {
  border-radius: 22rpx;
  background: rgba(156, 11, 11, 0.06);
  padding: 26rpx 28rpx;
  font-size: 28rpx;
  color: var(--color-text);
}

.form-input::placeholder,
.form-textarea::placeholder {
  color: rgba(102, 102, 102, 0.6);
}

.form-picker__value {
  display: flex;
  align-items: center;
  color: var(--color-text);
}

.form-textarea {
  min-height: 180rpx;
  line-height: 1.6;
}

.submit-btn {
  margin-top: 10rpx;
  border-radius: 999rpx;
  background: linear-gradient(145deg, #9c0b0b, #c71e1e);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  padding: 28rpx 0;
}

.submit-btn--disabled {
  opacity: 0.6;
}

.tips-card {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tips-item {
  font-size: 26rpx;
  color: var(--color-text-light);
  line-height: 1.6;
}

.tips-contact {
  display: flex;
  gap: 12rpx;
  font-size: 26rpx;
  color: var(--color-text);
  margin-top: 12rpx;
}

.tips-phone {
  color: var(--color-primary);
  font-weight: 600;
}

.scroll-space {
  height: 160rpx;
}
