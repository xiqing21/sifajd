.records-scroll {
  min-height: 100vh;
  background: linear-gradient(180deg, rgba(156, 11, 11, 0.07) 0%, rgba(246, 246, 246, 1) 65%);
}

.records-header {
  padding: 84rpx 40rpx 32rpx;
  text-align: center;
  color: var(--color-primary);
}

.records-title {
  font-size: 40rpx;
  font-weight: 700;
}

.records-subtitle {
  display: block;
  margin-top: 12rpx;
  font-size: 26rpx;
  color: rgba(156, 11, 11, 0.7);
}

.records-body {
  padding: 0 32rpx 160rpx;
  display: flex;
  flex-direction: column;
  gap: 28rpx;
  box-sizing: border-box;
}

.empty-state {
  margin-top: 80rpx;
  border-radius: 32rpx;
  background: #ffffff;
  box-shadow: 0 18rpx 50rpx rgba(156, 11, 11, 0.12);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  color: var(--color-primary);
}

.empty-icon {
  font-size: 56rpx;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(156, 11, 11, 0.7);
}

.empty-button {
  margin-top: 12rpx;
  padding: 16rpx 60rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #9c0b0b, #c71e1e);
  color: #ffffff;
  border: none;
}

.record-card {
  border-radius: 32rpx;
  background: #ffffff;
  box-shadow: 0 22rpx 60rpx rgba(156, 11, 11, 0.12);
  padding: 36rpx;
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.record-card__head {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-status {
  padding: 12rpx 36rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #9c0b0b, #c71e1e);
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 600;
}

.record-time {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 0.7);
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.record-row {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
}

.record-row .label {
  font-size: 26rpx;
  color: rgba(102, 102, 102, 0.8);
}

.record-row .value {
  font-size: 28rpx;
  color: var(--color-text);
  font-weight: 600;
  text-align: right;
}

.record-timeline {
  margin-top: 8rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.timeline-item {
  display: flex;
  gap: 18rpx;
}

.timeline-dot {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background: rgba(156, 11, 11, 0.2);
  margin-top: 10rpx;
}

.timeline-dot--done {
  background: linear-gradient(135deg, #9c0b0b, #c71e1e);
}

.timeline-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.timeline-title {
  font-size: 26rpx;
  color: var(--color-primary);
  font-weight: 600;
}

.timeline-desc {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 0.8);
}

.timeline-time {
  font-size: 22rpx;
  color: rgba(102, 102, 102, 0.6);
}

.scroll-space {
  height: 140rpx;
}
