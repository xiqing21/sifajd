.index-scroll {
  height: 100vh;
  background: #f6f6f6;
}

.hero-wrapper {
  padding: 80rpx 32rpx 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hero-title {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--color-primary);
  letter-spacing: 6rpx;
}

.index-body {
  padding: 0 32rpx 140rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 36rpx;
}

.search-card {
  background: linear-gradient(145deg, rgba(156, 11, 11, 0.12), rgba(199, 30, 30, 0.08));
  border-radius: 28rpx;
  padding: 30rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 999rpx;
  padding: 20rpx 28rpx;
  box-shadow: inset 0 0 0 1rpx rgba(156, 11, 11, 0.1);
  gap: 16rpx;
}

.search-icon {
  font-size: 26rpx;
  color: var(--color-primary);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--color-text);
}

.search-input::placeholder {
  color: rgba(156, 11, 11, 0.45);
}

.search-clear {
  font-size: 26rpx;
  color: var(--color-text-light);
  padding: 10rpx;
}

.search-tip {
  font-size: 24rpx;
  color: rgba(156, 11, 11, 0.6);
}

.card {
  background: #ffffff;
  border-radius: 28rpx;
  padding: 36rpx;
  box-shadow: 0 18rpx 48rpx rgba(156, 11, 11, 0.08);
}

.card-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--color-primary);
}

.card-subtitle {
  font-size: 24rpx;
  color: var(--color-text-light);
}

.marquee-container {
  position: relative;
  overflow: hidden;
  border-radius: 18rpx;
  background: rgba(156, 11, 11, 0.06);
}

.marquee-swiper {
  height: 96rpx;
}

.marquee-item {
  display: flex;
  align-items: center;
  gap: 18rpx;
  padding: 0 24rpx;
  height: 96rpx;
  color: var(--color-primary);
}

.marquee-date {
  font-size: 22rpx;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: #ffffff;
  box-shadow: 0 0 0 1rpx rgba(156, 11, 11, 0.18);
}

.marquee-content {
  font-size: 26rpx;
  font-weight: 500;
}

.highlight-list {
  display: flex;
  flex-direction: column;
  gap: 22rpx;
}

.highlight-item {
  display: flex;
  gap: 18rpx;
  align-items: flex-start;
}

.highlight-index {
  width: 60rpx;
  height: 60rpx;
  border-radius: 20rpx;
  background: linear-gradient(145deg, #9c0b0b, #c71e1e);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
}

.highlight-text {
  flex: 1;
  font-size: 26rpx;
  color: var(--color-text);
  line-height: 1.7;
}

.service-result {
  font-size: 24rpx;
  color: var(--color-text-light);
  margin-bottom: 20rpx;
}

.service-list {
  display: flex;
  flex-direction: column;
  gap: 26rpx;
}

.service-item {
  padding: 24rpx 28rpx;
  border-radius: 24rpx;
  background: rgba(156, 11, 11, 0.06);
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.service-item__info {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.service-item__name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.service-item__desc {
  font-size: 26rpx;
  color: var(--color-text);
  line-height: 1.6;
}

.service-item__keywords {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.service-item__tag {
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(156, 11, 11, 0.18);
  font-size: 22rpx;
  color: var(--color-primary);
}

.service-empty {
  padding: 40rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: rgba(156, 11, 11, 0.55);
}

.guide-steps {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.guide-step {
  display: flex;
  gap: 18rpx;
  align-items: flex-start;
}

.guide-step__badge {
  width: 56rpx;
  height: 56rpx;
  border-radius: 20rpx;
  background: #f8d7d7;
  color: var(--color-primary);
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.guide-step__content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.guide-step__title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.guide-step__desc {
  font-size: 24rpx;
  color: var(--color-text-light);
  line-height: 1.6;
}

.page-footer {
  text-align: center;
  font-size: 24rpx;
  color: var(--color-text-light);
}

.scroll-space {
  height: 120rpx;
}
