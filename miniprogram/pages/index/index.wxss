.container {
  min-height: 100vh;
  padding: 40rpx 30rpx 120rpx;
  background: linear-gradient(180deg, #f7fafe 0%, #eef3fb 35%, #ffffff 100%);
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 16rpx 40rpx rgba(14, 80, 165, 0.08);
}

.hero-card {
  background: linear-gradient(135deg, #0f4c81 0%, #2677c9 100%);
  color: #ffffff;
  position: relative;
  overflow: hidden;
}

.hero-card::after {
  content: '';
  position: absolute;
  top: -120rpx;
  right: -120rpx;
  width: 280rpx;
  height: 280rpx;
  background: rgba(255, 255, 255, 0.12);
  border-radius: 50%;
}

.hero-title {
  font-size: 52rpx;
  font-weight: 600;
}

.hero-slogan {
  margin-top: 12rpx;
  font-size: 32rpx;
  opacity: 0.85;
}

.hero-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 36rpx 0 28rpx;
}

.tag {
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.16);
  font-size: 26rpx;
}

.hero-desc {
  font-size: 28rpx;
  line-height: 1.7;
  opacity: 0.9;
}

.stats-card {
  display: grid;
  gap: 30rpx;
}

.stat {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.stat-title {
  font-size: 28rpx;
  color: #0f4c81;
  font-weight: 600;
}

.stat-value {
  font-size: 26rpx;
  color: #4a5568;
  line-height: 1.6;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #0f2b4c;
  margin-bottom: 28rpx;
}

.service-group {
  margin-bottom: 36rpx;
}

.service-group:last-child {
  margin-bottom: 0;
}

.group-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1c4587;
  margin-bottom: 16rpx;
}

.group-items {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.group-item {
  padding: 14rpx 22rpx;
  border-radius: 16rpx;
  background: #f1f5fb;
  font-size: 26rpx;
  color: #3a4a63;
}

.process-step {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.process-step:last-child {
  margin-bottom: 0;
}

.step-index {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #0f4c81, #2f6fb9);
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1c345a;
  margin-bottom: 10rpx;
}

.step-desc {
  font-size: 26rpx;
  color: #51607a;
  line-height: 1.7;
}

.advantage {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eef2f6;
}

.advantage:last-child {
  border-bottom: none;
}

.advantage-index {
  font-size: 28rpx;
  font-weight: 600;
  color: #0f4c81;
}

.advantage-text {
  font-size: 26rpx;
  color: #3a4b63;
  line-height: 1.6;
  flex: 1;
}

.contact-row {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 28rpx;
}

.contact-row:last-child {
  margin-bottom: 0;
}

.contact-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1c345a;
}

.contact-value {
  font-size: 26rpx;
  color: #4f5f74;
  line-height: 1.6;
}

.phones {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.action-chip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 28rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.action-primary {
  background: linear-gradient(135deg, #0f4c81, #2677c9);
  color: #ffffff;
}

.action-secondary {
  background: #f1f5fb;
  color: #1c4587;
}

.action-chip:active {
  transform: scale(0.96);
}

.footer {
  text-align: center;
  padding-bottom: 60rpx;
}
