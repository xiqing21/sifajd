.hero-swiper {
  padding: 0;
  overflow: hidden;
}

.hero-swiper__container {
  height: 320rpx;
}

.hero-swiper__container swiper-item {
  position: relative;
}

.hero-swiper__image {
  width: 100%;
  height: 100%;
}

.hero-swiper__overlay {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(15, 76, 129, 0.65) 0%, rgba(15, 76, 129, 0.15) 60%, rgba(15, 76, 129, 0.75) 100%);
  color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 40rpx 36rpx 50rpx;
  box-sizing: border-box;
}

.hero-swiper__badge {
  font-size: 24rpx;
  letter-spacing: 4rpx;
  opacity: 0.85;
  margin-bottom: 12rpx;
}

.hero-swiper__title {
  font-size: 42rpx;
  font-weight: 700;
}

.hero-swiper__caption {
  margin-top: 14rpx;
  font-size: 26rpx;
  line-height: 1.7;
  opacity: 0.92;
}

.quick-card {
  padding-bottom: 30rpx;
}

.quick-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(260rpx, 1fr));
  gap: 24rpx;
}

.quick-item {
  border-radius: 24rpx;
  padding: 28rpx 30rpx;
  background: rgba(15, 76, 129, 0.06);
  color: var(--color-primary);
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 12rpx 32rpx rgba(15, 76, 129, 0.08);
}

.quick-item--primary {
  background: linear-gradient(135deg, var(--color-primary), var(--color-primary-light));
  color: #ffffff;
}

.quick-text {
  display: inline-block;
  letter-spacing: 2rpx;
}

.service-summary {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.service-summary:last-child {
  margin-bottom: 0;
}

.service-image {
  width: 100%;
  height: 220rpx;
  border-radius: 22rpx;
}

.service-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.service-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-secondary);
}
