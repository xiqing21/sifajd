.mine-scroll {
  height: 100vh;
  background: #f6f6f6;
}

.mine-body {
  padding: 0 32rpx 160rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  box-sizing: border-box;
}

.profile-card {
  background: linear-gradient(135deg, #9c0b0b, #c71e1e);
  border-radius: 36rpx;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 28rpx;
  color: #ffffff;
  box-shadow: 0 18rpx 46rpx rgba(156, 11, 11, 0.25);
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.18);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 700;
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.profile-name {
  font-size: 38rpx;
  font-weight: 700;
}

.profile-meta {
  font-size: 26rpx;
  opacity: 0.85;
}

.profile-tag {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.2);
  font-size: 24rpx;
}

.card {
  background: #ffffff;
  border-radius: 28rpx;
  padding: 36rpx;
  box-shadow: 0 18rpx 48rpx rgba(156, 11, 11, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-primary);
  margin-bottom: 18rpx;
}

.shortcut-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 24rpx;
}

.shortcut-item {
  padding: 24rpx;
  border-radius: 24rpx;
  background: rgba(156, 11, 11, 0.06);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  color: var(--color-primary);
}

.shortcut-title {
  font-size: 28rpx;
  font-weight: 600;
}

.shortcut-desc {
  font-size: 24rpx;
  color: rgba(156, 11, 11, 0.7);
}

.shortcut-link {
  font-size: 24rpx;
  color: var(--color-primary);
  margin-top: 6rpx;
}

.card-head {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--color-primary);
}

.card-subtitle {
  font-size: 24rpx;
  color: var(--color-text-light);
}

.case-summary {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.case-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: var(--color-text);
}

.case-label {
  color: var(--color-text-light);
}

.case-value {
  font-weight: 600;
  color: var(--color-primary);
}

.case-status {
  padding: 8rpx 24rpx;
  border-radius: 999rpx;
  background: rgba(156, 11, 11, 0.12);
  color: var(--color-primary);
  font-size: 24rpx;
  font-weight: 600;
}

.case-progress {
  font-size: 24rpx;
  color: var(--color-text);
  line-height: 1.6;
}

.case-actions {
  display: flex;
  gap: 20rpx;
}

.primary-btn,
.ghost-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  border: none;
  padding: 0;
}

.primary-btn {
  background: linear-gradient(140deg, #9c0b0b, #c71e1e);
  color: #ffffff;
}

.ghost-btn {
  background: rgba(156, 11, 11, 0.08);
  color: var(--color-primary);
}

.primary-btn::after,
.ghost-btn::after {
  display: none;
}

.manual-update {
  margin-top: 22rpx;
  height: 76rpx;
  border-radius: 999rpx;
  background: rgba(156, 11, 11, 0.1);
  color: var(--color-primary);
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.notice-tabs {
  display: flex;
  gap: 16rpx;
  background: rgba(156, 11, 11, 0.06);
  padding: 10rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
}

.notice-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: rgba(156, 11, 11, 0.7);
}

.notice-tab--active {
  background: #ffffff;
  color: var(--color-primary);
  box-shadow: 0 8rpx 24rpx rgba(156, 11, 11, 0.12);
}

.notice-list {
  display: flex;
  flex-direction: column;
  gap: 22rpx;
}

.notice-item {
  display: flex;
  gap: 16rpx;
  align-items: baseline;
}

.notice-time {
  font-size: 22rpx;
  color: var(--color-text-light);
  width: 120rpx;
}

.notice-text {
  flex: 1;
  font-size: 26rpx;
  color: var(--color-text);
}

.setting-list {
  display: flex;
  flex-direction: column;
  gap: 22rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: var(--color-text);
}

.logout {
  text-align: center;
  font-size: 26rpx;
  color: rgba(156, 11, 11, 0.6);
  margin-top: 6rpx;
}

.scroll-space {
  height: 120rpx;
}
